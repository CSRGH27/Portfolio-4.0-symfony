
{% extends 'dashboard/base_dash.html.twig' %}


{% block stylesheets %}a{% endblock %}


{% block body %}


<div class="dash-tool">
    <div class="form-edit-skill">
        <h2 class="title-project">
        
            Edit a skill
        </h2>

        {{ form_start(form) }}
            <div class="form-edit-skill-in">
                <div class="form-project-row">
                    <div class="form-project-error">
                        {{ form_errors(form.title) }}
                    </div>
                    <div class="form-project-widget">
                        {{ form_widget(form.title, { 'attr' : {"placeholder" : "Name of the skill"}}) }}
                    </div>
                </div>

                <div class="form-project-row">
                    <div class="form-project-error">
                        {{ form_errors(form.level) }}
                    </div>
                    <div class="form-project-widget">
                        {{ form_widget(form.level, { 'attr' : {"placeholder" : "Level of the skill"}}) }}
                    </div>
                </div>

                <div class="form-project-row">
                    <div class="form-project-error">
                        {{ form_errors(form.imageFile) }}
                    </div>
                    <div class="form-project-widget ctn-upload">
                        {{ form_widget(form.imageFile, { 'attr' : {"placeholder" : "image"}}) }}
                        <img class="upload-img" src="{{ vich_uploader_asset(skill, 'imageFile') }}" alt="" />
                    </div>
                </div>

                <div class="form-project-row">
                    <button class="btn-form-project">
                        
                        
                        Edit Skill
                        
                    </button>
                </div>
            
            </div>
        {{ form_end(form) }}
    </div>
</div>


</div>
{% endblock %}










