{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block stylesheets %} {% endblock %}

{% block body %}


<div class="ctn-login">

    <form method="post" class="form-login" autocomplete="false">
        <img class="img-form-login" src="{{ asset('upload/1.png') }}" alt="">
        <h2 class="title-form-login">LOG IN</h2>
        <div class="line-input">
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="false" class="input-login mail-event" placeholder="Email" required>
            <span class="underline"></span>
        </div>
        <div class="line-input">
            <input type="password" name="password" id="inputPassword" class="input-login password-event"  placeholder="Password" required>
            <span class="underline-2"></span>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        
        <button class="btn-login" type="submit">
            Connexion
        </button>
    </form>

</div>


{% endblock %}
